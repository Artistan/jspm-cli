const { sep } = require('path');
const { getPackageScope } = require('../lib/utils/common');

// the first project only gets to determine the jspm version
const args = process.argv.slice(2);
let cwdArgIndex = args.indexOf('-p');
if (cwdArgIndex === -1)
  cwdArgIndex = args.indexOf('--project');
if (cwdArgIndex !== -1)
  process.chdir(args[cwdArgIndex + 1]);

const projectPath = getPackageScope(process.cwd() + sep) || process.cwd();
const { default: cli } = require('../lib/cli');

process.once('unhandledRejection', err => {
  console.error(err);
  process.exit(1);
});
process.once('SIGINT', () => {
  console.log('jspm process terminated.');
  process.exit(1);
});
process.once('SIGTERM', () => {
  console.log('jspm process terminated.');
  process.exit(1);
});

cli([projectPath], process.argv[2], process.argv.slice(3))
.then(() => process.exit(), _err => process.exit(1));
