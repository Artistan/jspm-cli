const path = require('path');
const fs = require('fs');
const { getJspmProjectPath } = require('../lib/utils/common');

// respect any -p / --project flag
// the first project only gets to determine the jspm version
const args = process.argv.slice(2);
let cwdArgIndex = args.indexOf('-p');
if (cwdArgIndex === -1)
  cwdArgIndex = args.indexOf('--project');
if (cwdArgIndex !== -1)
  process.chdir(args[cwdArgIndex + 1]);

// lookup the jspm project path
const projectPath = getJspmProjectPath(process.cwd() + path.sep);
process.env.jspmConfigPath = projectPath ? projectPath + path.sep + 'package.json' : '';
const localBinaryPath = projectPath && path.join(projectPath, 'jspm_packages', '.bin', 'jspm', process.platform === 'win32' ? '.cmd' : '');

// local jspm install
if (projectPath && process.env.globalJspm !== '0' && fs.existsSync(localBinaryPath)) {
  process.env.globalJspm = '0';
  const ps = require('child_process').spawn(localBinaryPath, args.slice(1), { stdio: 'inherit' });
  ps.on('exit', code => process.exit(code));
  ps.on('error', err => {
    console.error(err);
    process.exit(1);
  });
}
// global jspm install
else {
  process.env.globalJspm = '1';
  require('../lib/cli');
}
